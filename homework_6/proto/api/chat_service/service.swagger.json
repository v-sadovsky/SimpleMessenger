  "paths": {
    "/api/v1/chats/{user_id}": {
      "get": {
        "summary": "OpenChat - открыть существующий чат с другом (и получить все сообщения) либо создать новый чат (если еще нет)",
        "operationId": "ChatService_OpenChat",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/homework_6OpenChatResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "user_id",
            "description": "user_id - id пользователя, который запрашивает чат с сообщениями [url-parameter]",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "friend_id",
            "description": "friend_id - id друга, чат с которым хотим открыть [query-parameter]",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "uint64"
          }
        ],
        "tags": [
          "ChatService"
        ]
      },
      "post": {
        "summary": "SendMessage - отправить сообщение пользователю",
        "operationId": "ChatService_SendMessage",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/homework_6SendMessageResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "user_id",
            "description": "user_id - id пользователя, который отправляет сообщение",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ChatServiceSendMessageBody"
            }
          }
        ],
        "tags": [
          "ChatService"
        ]
      }
    }
  },
  "definitions": {
    "ChatServiceSendMessageBody": {
      "type": "object",
      "properties": {
        "chat_id": {
          "type": "string",
          "format": "uint64",
