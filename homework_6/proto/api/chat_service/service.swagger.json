        },
        "message": {
          "type": "string",
          "title": "message - сообщение, отправляемое пользователем"
        }
      },
      "description": "SendMessageRequest - запрос SendMessage",
      "title": "SendMessageRequest",
      "externalDocs": {
        "description": "Find out more about ABitOfEverything",
        "url": "https://github.com/grpc-ecosystem/grpc-gateway"
      },
      "required": [
        "chat_id",
        "message"
      ]
    },
    "homework_6OpenChatResponse": {
      "type": "object",
      "properties": {
        "chat_id": {
          "type": "string",
          "title": "chat_id - id чата с сообщениями"
        },
        "chats": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "messages - массив сообщений чата"
        }
      },
      "description": "OpenChatResponse - ответ OpenChatResponse",
      "title": "OpenChatResponse",
      "externalDocs": {
        "description": "Find out more about ABitOfEverything",
        "url": "https://github.com/grpc-ecosystem/grpc-gateway"
      }
    },
    "homework_6SendMessageResponse": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "title": "timestamp - время добавления сообщения в чат"
        }
      },
      "description": "SendMessageResponse - ответ SendMessage",
      "title": "SendMessageResponse",
      "externalDocs": {
        "description": "Find out more about ABitOfEverything",
        "url": "https://github.com/grpc-ecosystem/grpc-gateway"
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
